<?xml version="1.0" encoding="UTF-8"?>

<assembly>
    <id>min</id>

    <formats>
        <format>zip</format>
    </formats>

    <includeBaseDirectory>false</includeBaseDirectory>

    <fileSets>
        <fileSet>
            <directory>src/main/underlay/etc</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
    </fileSets>

    <dependencySets>
        <dependencySet>
            <outputDirectory>/</outputDirectory>
            <useStrictFiltering>true</useStrictFiltering>
            <excludes>
                <exclude>org.sonatype.beaker:beaker-tools</exclude>
                <exclude>org.sonatype.beaker:beaker-maven2</exclude>
                <exclude>org.sonatype.beaker:beaker-maven3</exclude>
            </excludes>
        </dependencySet>

        <dependencySet>
            <outputDirectory>/</outputDirectory>
            <useStrictFiltering>true</useStrictFiltering>
            <outputFileNameMapping>${artifact.artifactId}${dashClassifier?}.${artifact.extension}</outputFileNameMapping>
            <includes>
                <include>org.sonatype.beaker:beaker-tools</include>
                <include>org.sonatype.beaker:beaker-maven2</include>
                <include>org.sonatype.beaker:beaker-maven3</include>
            </includes>
        </dependencySet>
    </dependencySets>

</assembly>